<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Authors>Laskarzhevsky Software Inc</Authors>
    <Company>Laskarzhevsky Software Inc</Company>
    <Description>Meta-package that brings in all POCO DataSet components</Description>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <IsPackable>true</IsPackable>
    <PackageId>PocoDataSet</PackageId>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/Laskarzhevsky/PocoDataSet</PackageProjectUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/Laskarzhevsky/PocoDataSet</RepositoryUrl>
    <TargetFramework>net9.0</TargetFramework>
    <Version>1.0.4</Version>
  </PropertyGroup>
  
  <ItemGroup>
    <None Include="..\README.md" Pack="true" PackagePath="\" />
  </ItemGroup>
  
  <ItemGroup>
    <PackageReference Include="PocoDataSet.Data" Version="1.0.4" />
    <PackageReference Include="PocoDataSet.Extensions" Version="1.0.4" />
    <PackageReference Include="PocoDataSet.IData" Version="1.0.4" />
    <PackageReference Include="PocoDataSet.Serializer" Version="1.0.4" />
    <PackageReference Include="PocoDataSet.SqlServerDataAdapter" Version="1.0.4" />
  </ItemGroup>
</Project>
